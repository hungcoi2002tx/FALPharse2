@page
@model FAL.FrontEnd.Pages.Settings.InfoModel
@{
    ViewData["Title"] = "User Information";
}

<div class="main py-5">
    <div class="card shadow-lg p-4" style="border-radius: 10px;">
        <h2 class="text-center mb-4">
            <i class="bi bi-person-badge-fill"></i> User Information
        </h2>

        <!-- Success and Error Messages -->
        @if (Model.SuccessMessage != null)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle-fill"></i> @Model.SuccessMessage
            </div>
        }

        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle-fill"></i> @Model.ErrorMessage
            </div>
        }

        <!-- Display User Information -->
        <div class="bg-light p-3 rounded mb-4">
            <h5 class="mb-3"><i class="bi bi-info-circle-fill text-primary"></i> Current Information</h5>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>System Name:</strong> @Model.SystemName</p>
            <p><strong>Webhook URL:</strong> @Model.WebhookUrl</p>
            <p><strong>Webhook Secret Key:</strong> @Model.WebhookSecretKey</p>
        </div>

        <!-- Form to Update User Information -->
        <h5 class="text-primary mb-3"><i class="bi bi-pencil-fill"></i> Update Information</h5>
        <form method="post">
            <div class="form-group mb-3">
                <label for="Email">
                    <i class="bi bi-envelope-fill"></i> Email
                </label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter new email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="SystemName">
                    <i class="bi bi-server"></i> System Name
                </label>
                <input type="text" asp-for="SystemName" class="form-control" placeholder="Enter new system name" />
                <span asp-validation-for="SystemName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="WebhookUrl">
                    <i class="bi bi-link-45deg"></i> Webhook URL
                </label>
                <input type="text" asp-for="WebhookUrl" class="form-control" placeholder="Enter new webhook URL" />
                <span asp-validation-for="WebhookUrl" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="WebhookSecretKey">
                    <i class="bi bi-key-fill"></i> Webhook Secret Key
                </label>
                <input type="text" asp-for="WebhookSecretKey" class="form-control" placeholder="Enter new webhook secret key" />
                <span asp-validation-for="WebhookSecretKey" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3">
                <i class="bi bi-save-fill"></i> Update Information
            </button>
        </form>
    </div>
</div>

<!-- Additional Styling -->
<style>
    .main {
        max-width: 600px;
        margin: auto;
    }

    .btn-primary {
        border-radius: 30px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .form-control {
        border-radius: 30px;
        font-size: 16px;
        padding: 10px 15px;
    }

    .form-group label {
        font-weight: bold;
        font-size: 14px;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    .rounded {
        border-radius: 10px !important;
    }
</style>
