@page
@model FAL.FrontEnd.Pages.Settings.WebhookModel
@{
    ViewData["Title"] = "Cập nhật thông tin Webhook";
}

<h2>Cập nhật thông tin Webhook</h2>

<form method="post">
    <div class="form-group">
        <label for="WebhookUrl">Webhook URL</label>
        <input type="text" asp-for="WebhookUrl" class="form-control" />
        <span asp-validation-for="WebhookUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="WebhookSecretKey">Webhook Secret Key</label>
        <input type="text" asp-for="WebhookSecretKey" class="form-control" />
        <span asp-validation-for="WebhookSecretKey" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
</form>

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success mt-3">
        @Model.SuccessMessage
    </div>
}

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @Model.ErrorMessage
    </div>
}
