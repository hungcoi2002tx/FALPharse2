@page
@model FAL.FrontEnd.Pages.Auth.LoginModel
@{
    Layout = "_Layout";
}
<div class="d-flex vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <h2 class="text-center mb-4">
            <i class="bi bi-lock-fill"></i> Login
        </h2>

        @if (!string.IsNullOrEmpty(TempData["Message"] as string))
        {
            <div class="alert alert-info">
                @TempData["Message"]
            </div>
        }

        <form method="post">
            <div class="form-group mb-3">
                <label for="username">
                    <i class="bi bi-person-circle"></i> Username
                </label>
                <input type="text" id="username" asp-for="Username" class="form-control" placeholder="Enter your username" required />
            </div>
            <div class="form-group mb-3">
                <label for="password">
                    <i class="bi bi-lock"></i> Password
                </label>
                <input type="password" id="password" asp-for="Password" class="form-control" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3 hover-shadow">
                <i class="bi bi-box-arrow-in-right"></i> Login
            </button>
        </form>

        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
        }

        <div class="text-center mt-3">
            <small>Don't have an account?<a href="/Auth/Register" class="text-decoration-none"> Register here</a></small>
        </div>
    </div>
</div>

<!-- Additional Styling for Hover Effects -->
<style>
    .card {
        border-radius: 10px;
    }

    .hover-shadow:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .form-control {
        border-radius: 30px;
        font-size: 16px;
    }

    .btn-primary {
        border-radius: 30px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-center small {
        font-size: 14px;
        color: #6c757d;
    }

        .text-center small a {
            color: #007bff;
        }

            .text-center small a:hover {
                text-decoration: underline;
            }

    /* Ensuring the form is centered vertically */
    .vh-100 {
        min-height: 100vh; /* Ensure full height */
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
