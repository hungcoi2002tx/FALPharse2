@page
@model FAL.FrontEnd.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Quản lý tài khoản";
}
<h1>Quản lý tài khoản</h1>

<!-- Hiển thị thông báo thành công -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Hiển thị thông báo lỗi -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>System Name</th>
            <th>Webhook URL</th>
            <th>Webhook Secret Key</th>
            <th>Status</th>
            <th></th>
            <th>Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.Username</td>
                <td>@account.Email</td>
                <td>
                    @(account.RoleId == 1 ? "Admin" : account.RoleId == 2 ? "User" : "Unknown")
                </td>
                <td>@account.SystemName</td>
                <td>
                    <a href="@account.WebhookUrl" target="_blank">@account.WebhookUrl</a>
                </td>
                <td>@account.WebhookSecretKey</td>
                <td>@account.Status</td>
                <td>
                    <!-- Nút sửa -->
                    <a class="btn btn-warning btn-sm" href="/admin/update/?username=@account.Username">Sửa</a>
                </td>
                <td>

                    <!-- Nút kích hoạt/khóa -->
                    <form method="post" style="display:inline;">
                        <input type="hidden" name="username" value="@account.Username" />
                        <button type="submit" class="btn btn-secondary btn-sm">
                            @(account.Status == "Active" ? "Deactivate" : "Activate")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/Add" class="btn btn-primary">Thêm tài khoản</a>
